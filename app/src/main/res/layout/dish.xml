<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="top|center_horizontal"
    android:background="#C8C2B9" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/defImage"
            android:background="@drawable/ic_launcher_background"
            android:layout_marginLeft="95dp"
            android:contentDescription="defImage" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:fontFamily="@font/welcome"
        android:textSize="28sp"
        android:layout_height="40dp"
        android:textColor="#C8C2B9"
        android:background="@color/black"
        android:text="dishName"
        android:gravity="center"
        android:id="@+id/dishName"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/welcome"
                android:gravity="left"
                android:textSize="25sp"
                android:paddingTop="20dp"
                android:text="Ingredients"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="left"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:text="ingredient info"
                android:id="@+id/dishIngredient"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/welcome"
                android:gravity="left"
                android:textSize="25sp"
                android:paddingTop="20dp"
                android:text="Instructions"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="left"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:text="instructions"
                android:id="@+id/dishInstruct"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/welcome"
                android:gravity="left"
                android:textSize="25sp"
                android:paddingTop="20dp"
                android:text="Nutritional information"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="left"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:text="nutrition info"
                android:id="@+id/dishNutrition"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#C8C2B9"
            android:fontFamily="@font/welcome"
            android:layout_weight="1"
            android:textStyle="bold"
            android:id="@+id/modifyButton"
            android:backgroundTint="@color/black"
            android:text="modify dish"/>

        <TextView
            android:layout_width="135dp"
            android:layout_height="match_parent">

        </TextView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#C8C2B9"
            android:fontFamily="@font/welcome"
            android:layout_weight="1"
            android:textStyle="bold"
            android:id="@+id/deleteButton"
            android:backgroundTint="@color/black"
            android:text="delete dish"/>
    </LinearLayout>
</LinearLayout>

