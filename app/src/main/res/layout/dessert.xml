<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/scrollElements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

<!--        <ImageView-->
<!--            android:id="@+id/myImageView"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="70dp"-->
<!--            android:contentDescription="Entree picture"-->
<!--            android:background="@drawable/healthy_dinner_recipes"/>-->


        <Button
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@drawable/square_button"
            app:backgroundTint="@null"
            android:text="Desserts"
            android:textSize="50dp">
        </Button>

        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+\nadd new dish"
            android:backgroundTint="@color/black"
            android:id="@+id/addNewDishButton">
        </Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/gray">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/appetizerButton"
                android:backgroundTint="@color/black"
                android:text="appetizers"
                >
            </Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/entreeButton"
                android:backgroundTint="@color/black"
                android:text="entrees"
                >
            </Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/dessertButton"
                android:text="desserts"
                android:backgroundTint="@color/red">
            </Button>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
